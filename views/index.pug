extends layout

block content
  header 
    a(href="/") Courses Inventory  
  main.mcontainer 
    section(class='categories container') 
      h1= title
      .categories 
        each category in categories 
          a(href=`${category.url + '/courses'}`)  
            .category 
              h2 #{category.name}
              .description #{category.description}
    .links 
      a(href="/category/create") Create New Category 
      a(href="/instructors") Intructors    
      
    
   
  

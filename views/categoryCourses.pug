extends layout

block content
  header 
    a(href="/") Courses Inventory 
  main.mcontainer
    section(class='courses container')
      h1= title
      .courses
        each course in courses
          a(href=`${course.url + '/details'}`)
            .course
              h2 #{course.title}
              .description #{course.description}
    .links
      a(href=category.url+'/course/create') Create New Course
      a(href=`${category.url + '/update'}`) Update this category
      a(href=`${category.url + '/delete'}`) Delete  this category